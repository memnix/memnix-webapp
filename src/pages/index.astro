---
import {Layout} from "@globals";
import i18next, {setDefaultNamespace, changeLanguage} from "i18next";
import Hero from "../components/discover/Hero.astro";
import Features from "../components/discover/Features.astro";
import Header from "../components/global/Header/Header.astro";
import Marquee from "../components/discover/Marquee.tsx";

changeLanguage("en");
setDefaultNamespace("common");

Astro.cookies.set("lang", i18next.language, {
	path: "/",
	sameSite: "lax"
});
export const prerender = true;
---

<Layout title="Memnix">
	<Header/>
	<Hero/>
	<Marquee client:visible/>
	<Features/>
</Layout>
